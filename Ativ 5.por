programa {
  funcao inicio() {
    real numero1, numero2, numero3, media

    escreva ("Digite o primeiro numero \n")
    leia (numero1)

    escreva ("Digite o segundo numero \n")
    leia (numero2)

    escreva ("Digite o terceiro numero \n")
    leia (numero3)
    
    media = (numero1+numero2+numero3)/3
    escreva ("A média é:\n ", media)
  }
}
